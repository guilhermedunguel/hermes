{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"env": ["DATABASE_URL", "NODE_ENV", "FASTIFY_PORT"]
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"cache": true
		},
		"test": {
			"cache": false,
			"persistent": true,
			"env": ["DATABASE_URL", "NODE_ENV", "FASTIFY_PORT"]
		},
		"format": {
			"cache": true
		}
	}
}
